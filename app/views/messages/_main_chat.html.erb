<div class = "chat_header">
  <div class = "chatroom_overview">
    <div class = "overview_title">
      <%= @room.name %>
    </div>
  </div>
  <div class = "chatroom_end">
    <div class = "end_btn">
      <a href = "#" class = "end_link">
        チャットを終了する
      </a>
  </div>
  </div>
</div>
<div class = "chat_content">
  <%= render partical: 'message', collection: @messages %>
</div>
<div class = "chat_form">
  <%= form_with model: [@room, @message], html: {class: "form_content"}, local: true do |f|%>
    <div class="form_input">
      <%= f.text_field :content, class: 'message_form', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'send_btn' %>
  <% end %>
</div>