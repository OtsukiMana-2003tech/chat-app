<div class = "side_header">
  <div class = "user_name">
    <!--テスト表示用の仮データ-->
    <a href = "#" class = "name_link">
      <%= link_to current_user.name, edit_user_path(current_user) %>
    </a>
  </div>
  <div class = "chat_btn">
    <%= link_to "チャットを作成する", new_room_path , class: 'btn_link' %>
  </div>
</div>
<div class = "side_rooms">
  <% current_user.rooms.each do |room| %>
    <div class = "room_names">
      <%= link_to room.name, room_messages_path(room) %>
    </div>
  <% end %>
</div>