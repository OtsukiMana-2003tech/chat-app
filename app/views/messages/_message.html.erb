<div class = "content_index">
  <div class = "content_upper">
    <div class = "content_name">
      <!--登録したユーザー名情報を出力-->
      <%= message.user.name %>
    </div>
    <div class = "content_date">
      <!--投稿した時刻を出力する-->
      <%= l message.created_at %>
    </div>
  </div>
  <div class = "content_lower">
    <div class = "content_text">
      <!--投稿したメッセージの内容を記述する-->
      <%= message.content %>
    </div>
  </div>
</div>